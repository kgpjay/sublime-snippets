	<content><![CDATA[
ll power(ll a,ll b)
{
    ll ans=1LL;
    while(b)
    {
        if(b%2==1)
        {
            ans=(ans*a)%mod;
        }
        a=(a*a)%mod;
        b=b/2;

    }
    return ans;
}
]]></content>
